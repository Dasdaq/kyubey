                    @if (User.IsInRole("ROOT"))
                    {
                        <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                            <span>@SR["Curve Management"]</span>
                        </h6>
                        <ul class="nav flex-column mb-2">
                            <li class="nav-item">
                                <a class="nav-link @(ViewBag.Current == "curve-all" ? "active" : "")" asp-action="Index" asp-controller="Curve">
                                    <i class="fa fa-line-chart"></i>
                                    @SR["All Curves"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewBag.Current == "curve-create" ? "active" : "")" asp-action="Create" asp-controller="Curve">
                                    <i class="fa fa-plus"></i>
                                    @SR["Create Curve"]
                                </a>
                            </li>
                        </ul>
                    }

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>@SR["My Account"]</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Current == "account-change-pwd" ? "active" : "")" asp-action="Password" asp-controller="Account">
                                <i class="fa fa-lock"></i>
                                @SR["Change Password"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:$('#frmLogout').submit();">
                                <i class="fa fa-sign-out"></i>
                                @SR["Log out"]
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <form id="frmLogout" asp-action="Logout" asp-controller="Account"></form>

    <script src="/scripts/jquery.min.js"></script>
    <script src="/scripts/popper.min.js"></script>
    <script src="/scripts/bootstrap.min.js"></script>
    <script src="/scripts/simplemde.min.js"></script>
    <script src="/scripts/jquery.fileupload.js"></script>
    <script src="/scripts/localization.js"></script>
    <script src="~/scripts/d3.min.js"></script>
    <script src="~/scripts/function-plot.min.js"></script>
    <script src="/scripts/site.js"></script>
