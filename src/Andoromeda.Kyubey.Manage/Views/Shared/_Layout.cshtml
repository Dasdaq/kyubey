                        @SR["Validate Token"]
                    </a>
                </li>*@
                        }
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>@SR["Bancor"]</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Current == "bancor-all" ? "active" : "")" asp-action="All" asp-controller="Bancor">
                                <i class="fa fa-bitcoin"></i>
                                @SR["All Bancor Tokens"]
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>@SR["DEX"]</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Current == "dex-all" ? "active" : "")" asp-action="Index" asp-controller="Dex">
                                <i class="fa fa-bitcoin"></i>
                                @SR["All DEX Tokens"]
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>@SR["OTC"]</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Current == "otc-all" ? "active" : "")" asp-action="Index" asp-controller="Otc">
                                <i class="fa fa-bitcoin"></i>
                                @SR["All OTC Tokens"]
                            </a>
                        </li>
                    </ul>

