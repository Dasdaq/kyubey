                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Current == "home" ? "active" : "")" asp-action="Index" asp-controller="Home">
                                <i class="fa fa-home"></i>
                                @SR["Dashboard"]
                            </a>
                        </li>
                    </ul>

                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>@SR["Token"]</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Current == "token-all" ? "active" : "")" asp-action="Index" asp-controller="Token">
                                <i class="fa fa-tasks"></i>
                                @SR["All Tokens"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Current == "token-create" ? "active" : "")" asp-action="Create" asp-controller="Token">
                                <i class="fa fa-plus"></i>
                                @SR["Create Token"]
                            </a>
                        </li>
