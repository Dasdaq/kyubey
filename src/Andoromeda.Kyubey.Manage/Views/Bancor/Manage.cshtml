@model Bancor
@{
    ViewBag.Title = Model.Id + " - " + SR["Basic"];
    ViewBag.Current = "bancor-manage-basic";
}

@await Html.PartialAsync("_ManageHeader")

<script src="~/scripts/ace/ace.js"></script>
<script src="~/scripts/ace/theme-twilight.js"></script>
<script src="~/scripts/ace/ext-language_tools.js"></script>
<script src="~/scripts/ace/mode-javascript.js"></script>

<form class="col-lg-8 col-md-12" asp-action="Manage" method="post" id="frmBancorBasic">
    <div class="form-group"><label>@SR["Contract"]</label><br /><input type="text" value="@Model.Token.Contract" class="form-control" disabled /></div>
    <div class="form-group"><label>@SR["Trade Javascript"]</label><br /><pre id="tradeJavascript" style="height: 300px;">@Model.TradeJavascript</pre><input type="hidden" name="TradeJavascript" id="hidTradeJavascript" /></div>
    <div class="form-group"><input type="submit" value="@SR["Save"]" class="btn btn-primary" /></div>
</form>
